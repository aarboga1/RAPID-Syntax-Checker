<Window x:Class="RAPID_Syntax_Checker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAPID_Syntax_Checker"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized"
        Background="#262728">

    <Grid>
        <!-- Grid and Row Definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <DockPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Top">
            <Menu DockPanel.Dock="Top" Width="Auto" Height="19">
                <MenuItem Header="_File">
                    <MenuItem Header="_Exit" Click="Exit_Click"/>
                    <MenuItem Header="_Open" Click="Open_Click"/>
                </MenuItem>

            </Menu>
        </DockPanel>



    </Grid>
</Window>
